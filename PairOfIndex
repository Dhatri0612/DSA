package SumOfIndex;

public class main {
    public static void main(String[] args) {
        int arr[]={1,3,5,7,8};
        int sum=8;
        for(int i=0;i< arr.length;i++){
            for(int j=i+1;j<arr.length;j++){
                if(arr[i]+arr[j]==sum){
                    System.out.print(" pair " + i+ " and " + j );
                }
            }
        }
    }
}
